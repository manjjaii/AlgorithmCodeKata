#include <string>
using namespace std;

int solution(string s) {
    int answer = 0;
    int same = 0, diff = 0;
    char x = s[0]; // 첫 글자 기준 문자 설정

    for (int i = 0; i < s.size(); i++) {
        if (s[i] == x) same++;
        else diff++;

        // 두 횟수가 같아질 때 분리
        if (same == diff) {
            answer++;
            // 다음 구간 준비
            if (i + 1 < s.size()) x = s[i + 1];
            same = diff = 0;
        }
    }

    // 마지막 구간이 남아있을 경우
    if (same != 0 || diff != 0) answer++;

    return answer;
}
