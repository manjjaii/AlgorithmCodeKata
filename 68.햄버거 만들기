#include <string>
#include <vector>
using namespace std;

int solution(vector<int> ingredient) {
    vector<int> stack;
    int count = 0;

    for (int x : ingredient) {
        stack.push_back(x);

        // 스택의 크기가 4 이상일 때만 검사
        if (stack.size() >= 4) {
            int n = stack.size();
            // 마지막 4개가 [1, 2, 3, 1] 인지 확인
            if (stack[n-4] == 1 && stack[n-3] == 2 && stack[n-2] == 3 && stack[n-1] == 1) {
                // 맞으면 pop 4번 (햄버거 완성)
                stack.pop_back();
                stack.pop_back();
                stack.pop_back();
                stack.pop_back();
                count++;
            }
        }
    }

    return count;
}
