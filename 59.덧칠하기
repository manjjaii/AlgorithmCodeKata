#include <bits/stdc++.h>
using namespace std;

int solution(int n, int m, vector<int> section) {
    sort(section.begin(), section.end());
    int cnt = 0;
    int i = 0;
    int k = section.size();

    while (i < k) {
        int start = section[i];
        int cover_end = start + m - 1; // 롤러가 덮을 수 있는 끝 위치
        cnt++;

        // cover_end 이하인 구역들은 이번 칠로 처리
        while (i < k && section[i] <= cover_end) {
            i++;
        }
    }
    return cnt;
}

int main() {
    cout << solution(8, 4, {2, 3, 6}) << "\n";               // 2
    cout << solution(8, 3, {1, 2, 3, 4, 5, 6, 7, 8}) << "\n"; // 3
    cout << solution(5, 2, {1, 4, 5}) << "\n";               // 2
    return 0;
}
